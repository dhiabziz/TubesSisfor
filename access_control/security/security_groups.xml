<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Project Core Groups -->
    <record id="group_project_admin" model="res.groups">
        <field name="name">Administrator Proyek</field>
        <field name="category_id" ref="base.module_category_project"/>
    </record>

    <record id="group_project_manager" model="res.groups">
        <field name="name">Manajer Proyek</field>
        <field name="implied_ids" eval="[(4, ref('group_project_member'))]"/>
    </record>

    <record id="group_project_member" model="res.groups">
        <field name="name">Anggota Tim Proyek</field>
        <field name="implied_ids" eval="[(4, ref('group_project_client'))]"/>
    </record>

    <record id="group_project_client" model="res.groups">
        <field name="name">Klien</field>
    </record>

    <!-- Automatic group assignments -->
    <record id="group_project_user_inherit" model="res.groups" inherit_id="project.group_project_user">
        <field name="implied_ids" eval="[(4, ref('access_control.group_project_member'))]"/>
    </record>
    
    <record id="group_project_manager_inherit" model="res.groups" inherit_id="project.group_project_manager">
        <field name="implied_ids" eval="[(4, ref('access_control.group_project_manager'))]"/>
    </record>
</odoo>