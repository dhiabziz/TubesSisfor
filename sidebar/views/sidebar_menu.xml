        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_sidebar_user"
              name="Button akun"
              parent="menu_sidebar_root"
              action="action_sidebar_user"/>

    <record id="action_sidebar_logout" model="ir.actions.act_window">
        <field name="name">Logout</field>
        <field name="res_model">sidebar.item</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_sidebar_logout"
              name="Logout"
              parent="menu_sidebar_root"
              action="action_sidebar_logout"/>
