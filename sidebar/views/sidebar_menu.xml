    <record id="action_sidebar_project" model="ir.actions.act_window">
        <field name="name">Dashboard Manajemen Proyek</field>
        <field name="res_model">sidebar.item</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_sidebar_dashboard"
              name="Dashboard Manajemen Proyek"
              parent="menu_sidebar_root"
              action="action_sidebar_project"/>

    <record id="action_sidebar_docs" model="ir.actions.act_window">
        <field name="name">Dashboard Manajemen Dokumen</field>
        <field name="res_model">sidebar.item</field>
