<odoo>
  <record id="view_sidebar_form" model="ir.ui.view">
    <field name="name">sidebar.item.form</field>
    <field name="model">sidebar.item</field>
    <field name="arch" type="xml">
      <form string="Sidebar Item">
        <sheet>
          <group>
            <field name="name"/>
            <field name="action"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_sidebar_tree" model="ir.ui.view">
    <field name="name">sidebar.item.tree</field>
    <field name="model">sidebar.item</field>
    <field name="arch" type="xml">
      <tree string="Sidebar Items">
        <field name="name"/>
        <field name="action"/>
      </tree>
    </field>
  </record>

  <record id="action_sidebar_item" model="ir.actions.act_window">
    <field name="name">Sidebar Items</field>
    <field name="res_model">sidebar.item</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_sidebar_items" name="Manage Sidebar Items" parent="menu_sidebar_root" action="action_sidebar_item"/>
</odoo>
